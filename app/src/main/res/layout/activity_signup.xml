<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".SignupActivity">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />
    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
        android:layout_width="360dp"
        android:id="@+id/chooseLocation"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="16dp"

        android:background="@drawable/white_button"
        android:elevation="5dp"
        app:endIconDrawable="@drawable/arrow_circle_down"
        app:endIconTint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:boxStrokeWidth="0dp"
        app:boxStrokeWidthFocused="0dp"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" >


        <AutoCompleteTextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/locationList"
            android:inputType="none"
            android:text="Choose Location"
            android:textColor="@color/black"
            android:fontFamily="@font/shantellsans_medium" />

    </com.google.android.material.textfield.TextInputLayout>


    <EditText
        android:id="@+id/nameOfRestaurant"
        android:layout_width="360dp"
        android:layout_height="45dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/edittext"
        android:drawableLeft="@drawable/home"
        android:drawablePadding="15dp"
        android:elevation="5dp"
        android:hint="Name of Restaurent"
        android:paddingStart="20dp"
        android:textColorHint="#8F8888"
        app:layout_constraintEnd_toEndOf="@+id/userName"
        app:layout_constraintStart_toStartOf="@+id/userName"
        app:layout_constraintTop_toBottomOf="@+id/userName" />

    <EditText
        android:id="@+id/email"
        android:layout_width="360dp"
        android:layout_height="45dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/edittext"
        android:drawableLeft="@drawable/email_logo"
        android:drawablePadding="15dp"
        android:elevation="5dp"
        android:hint="Email or Phone Number"
        android:paddingStart="20dp"
        android:textColorHint="#8F8888"
        app:layout_constraintEnd_toEndOf="@+id/nameOfRestaurant"
        app:layout_constraintStart_toStartOf="@+id/nameOfRestaurant"
        app:layout_constraintTop_toBottomOf="@+id/nameOfRestaurant" />
    <EditText
        android:id="@+id/password"
        android:layout_width="360dp"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/edittext"
        android:drawableLeft="@drawable/lock_logo"
        android:drawablePadding="15dp"
        android:elevation="5dp"
        android:hint="Password"
        android:paddingStart="20dp"
        android:textColorHint="#8F8888"
        app:layout_constraintEnd_toEndOf="@+id/email"
        app:layout_constraintStart_toStartOf="@+id/email"
        app:layout_constraintTop_toBottomOf="@+id/email" />


    <EditText
        android:id="@+id/userName"
        android:layout_width="360dp"
        android:layout_height="45dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/edittext"
        android:drawableLeft="@drawable/user_01"
        android:drawablePadding="15dp"
        android:elevation="5dp"
        android:hint="Name of Owner"
        android:paddingStart="20dp"
        android:textColorHint="#8F8888"
        app:layout_constraintEnd_toEndOf="@+id/textView7"
        app:layout_constraintStart_toStartOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/chooseLocation" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/shantellsans_medium"
        android:text="Sign Up Here"
        android:textAlignment="center"
        android:textColor="@color/green"
        android:textSize="16sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="218dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/main_font"
        android:text="Waves of Food"
        android:textAllCaps="false"
        android:textColor="@color/green"
        android:textSize="40sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="@+id/imageView3"
        app:layout_constraintStart_toStartOf="@+id/imageView3"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/shantellsans_medium"
        android:text="Sign Up With"
        android:textSize="10dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/password"
        tools:layout_editor_absoluteX="174dp" />

    <TextView
        android:id="@+id/haveAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Already Have an Account?"
        android:textColor="@color/green"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="@+id/createAccountButton"
        app:layout_constraintStart_toStartOf="@+id/createAccountButton"
        app:layout_constraintTop_toBottomOf="@+id/createAccountButton" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/FBButton"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/white_button"
        android:drawableLeft="@drawable/facebook_3_1"
        android:fontFamily="@font/shantellsans_medium"
        android:paddingLeft="15dp"
        android:text="Facebook"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="15dp"
        app:layout_constraintEnd_toStartOf="@+id/GButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/GButton"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/white_button"
        android:drawableLeft="@drawable/google_icon_2"
        android:elevation="5dp"
        android:fontFamily="@font/shantellsans_medium"
        android:paddingLeft="15dp"
        android:text="Google"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/createAccountButton"
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/green_button_next"
        android:fontFamily="@font/shantellsans_medium"
        android:text="Create Account"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="@+id/GButton"
        app:layout_constraintHorizontal_bias="0.421"
        app:layout_constraintStart_toStartOf="@+id/FBButton"
        app:layout_constraintTop_toBottomOf="@+id/FBButton" />

</androidx.constraintlayout.widget.ConstraintLayout>